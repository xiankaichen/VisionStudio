<UserControl x:Class="DeepVision.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:local="clr-namespace:DeepVision"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <!-- 主区域 -->
    <Grid>

        <!-- 主内容区域 -->
        <DockPanel Margin="20">
            <!-- 左侧按钮区域 -->
            <StackPanel DockPanel.Dock="Left" Width="150" Margin="0,0,20,0">
                <Button Content="新建工程"  Margin="0 10">

                </Button>
                <Button Content="打开工程" Margin="0 10">

                </Button>
            </StackPanel>

            <!-- 主区域 -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 示例工程 -->
                <GroupBox Header="示例工程" Foreground="White" FontWeight="Bold"
                          Style="{StaticResource MaterialDesignGroupBox}" Margin="0,0,0,10">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <!-- 模拟的示例卡片 -->
                            <materialDesign:Card Width="120" Height="160" Margin="5">
                                <StackPanel>
                                    <Rectangle Height="100">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Views/ImageClassification.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock Text="图像分类" Margin="5" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>
                            <materialDesign:Card Width="120" Height="160" Margin="5">
                                <StackPanel>
                                    <Rectangle Height="100">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Views/InstanceSegmentation.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock Text="表面分割" Margin="5" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>
                            <materialDesign:Card Width="120" Height="160" Margin="5">
                                <StackPanel>
                                    <Rectangle Height="100" >
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/Views/DefectDetection.png"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <TextBlock Text="缺陷检测" Margin="5" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:Card>
                            <!-- 可继续添加更多卡片 -->
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>

                <!-- 最近打开工程 -->
                <GroupBox Grid.Row="1" Header="最近打开的工程" Foreground="White" FontWeight="Bold"
                          Style="{StaticResource MaterialDesignGroupBox}" Margin="0,10,0,0">
                    <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" Margin="10"
                              Background="{x:Null}" Foreground="White" BorderThickness="0"
                              materialDesign:DataGridAssist.CellPadding="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="工程名" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="模块" Binding="{Binding Module}" Width="*"/>
                            <DataGridTextColumn Header="修改时间" Binding="{Binding ModifiedTime}" Width="*"/>
                            <DataGridTextColumn Header="保存路径" Binding="{Binding Path}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>
        </DockPanel>

    </Grid>
</UserControl>
